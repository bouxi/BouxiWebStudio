{% extends 'base.html.twig' %}

{% block title %}Portfolio — BouxiWebStudio{% endblock %}

{% block body %}
    <h1 class="text-center mb-4">Mes Réalisations</h1>

    <p class="text-secondary text-center">Quelques projets récents.</p>

    <div class="row g-4 mt-4">

        {% set projets = [
            { title: 'TheWinners', desc: 'Site complet de guilde WoW 3.3.5 : admin, guides, messagerie.' },
            { title: 'TheCars', desc: 'Marketplace automobile complète avec filtres, annonces, dashboard.' },
            { title: 'Events', desc: 'Gestion événements + réservations avec calendrier interactif.' }
        ] %}

        {% for p in projets %}
            <div class="col-md-4">
                <div class="card bg-secondary bg-opacity-25 border-0">
                    <div class="card-body">
                        <h3 class="h5">{{ p.title }}</h3>
                        <p>{{ p.desc }}</p>
                    </div>
                </div>
            </div>
        {% endfor %}

    </div>
{% endblock %}
