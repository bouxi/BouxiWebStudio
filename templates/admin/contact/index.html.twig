{# templates/admin/contact/index.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Messages de contact — Admin{% endblock %}

{% block body %}
    <h1 class="mb-4">Messages de contact</h1>

    <p class="text-secondary">
        Liste de tous les messages envoyés via le formulaire de contact.
    </p>

    {% if messages is empty %}
        <div class="alert alert-info">
            Aucun message pour le moment.
        </div>
    {% else %}
        <div class="table-responsive">
            <table class="table table-dark table-striped align-middle">
                <thead>
                <tr>
                    <th>Reçu le</th>
                    <th>Nom</th>
                    <th>Email</th>
                    <th>Sujet</th>
                    <th>Message</th>
                    <th>Lu ?</th>
                </tr>
                </thead>
                <tbody>
                {% for msg in messages %}
                    <tr>
                        <td>{{ msg.createdAt ? msg.createdAt|date('d/m/Y H:i') : '' }}</td>
                        <td>{{ msg.fullname }}</td>
                        <td>{{ msg.email }}</td>
                        <td>{{ msg.subject }}</td>
                        <td>
                            {# On affiche un extrait du message pour ne pas surcharger la vue #}
                            {{ msg.message|length > 80
                            ? msg.message|slice(0, 80) ~ '...'
                            : msg.message
                            }}
                        </td>
                        <td>
                            {% if msg.isRead %}
                                <span class="badge bg-success">Oui</span>
                            {% else %}
                                <span class="badge bg-warning text-dark">Non</span>
                            {% endif %}
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    {% endif %}
{% endblock %}
